# =====================================================
# Sistema Ministerial - Frontend (.env.example)
# =====================================================
# Copie para .env (frontend) e preencha valores reais localmente.
# NÃO versione .env. Use Secrets no CI/CD.
#
# Este arquivo é somente do FRONTEND (Vite). O backend possui
# seu próprio arquivo em backend/.env.example
# =====================================================

# Ambiente
NODE_ENV="development"
VITE_APP_ENV="development"

# Base da API (dev usa 3001 por padrão)
VITE_API_BASE="http://localhost:3001"

# Supabase (frontend precisa apenas da URL e ANON KEY)
VITE_SUPABASE_URL="https://your-project-id.supabase.co"
VITE_SUPABASE_ANON_KEY="eyJ...your-anon-key-here"

# Flags do app (opcional)
VITE_ENABLE_DEVELOPER_PANEL="true"
VITE_ENABLE_PWA="true"
VITE_ENABLE_DARK_MODE="true"

# Observabilidade (opcional)
VITE_SENTRY_DSN=""
VITE_GOOGLE_ANALYTICS_ID=""

# =====================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =====================================================

# Development Specific
VITE_DEV_TOOLS="true"
VITE_HOT_RELOAD="true"

# Production Specific (uncomment for production)
# VITE_APP_ENV="production"
# NODE_ENV="production"
# VITE_DEV_TOOLS="false"
# LOG_LEVEL="error"

# Staging Specific (uncomment for staging)
# VITE_APP_ENV="staging"
# NODE_ENV="staging"
# LOG_LEVEL="warn"

# Sync Configuration
VITE_SYNC_MANUAL_ONLY=false
